@model LoginVm

@{
    ViewData["Title"] = "Login";
}

@section Resources
{
    <link rel="stylesheet" href="css/pages/login.css" asp-append-version="true" />
}

<div class="login-container">
    <form class="login-form" asp-action="Login">
        <h2>Login</h2>

        <div class="form-group">
            <span asp-validation-for="Email"></span>
            <label for="email">Email</label>
            <input id="email" type="email" placeholder="Enter your email" required asp-for="Email"/>
        </div>

        <div class="form-group">
            <span asp-validation-for="Password"></span>
            <label for="password">Password</label>
            <input id="password" type="password" placeholder="Enter your password" required asp-for="Password"/>
        </div>

        <button type="submit">Sign In</button>
    </form>
</div>